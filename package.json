{
	"name": "block-editor-governance",
	"version": "1.0.0",
	"description": "This is a plugin for integrating governance into the block editor",
	"author": "VIP Bistro",
	"main": "build/index.js",
	"devDependencies": {
		"@automattic/eslint-plugin-wpvip": "0.5.6",
		"@playwright/test": "^1.36.1",
		"@wordpress/block-editor": "^12.1.0",
		"@wordpress/components": "^25.0.0",
		"@wordpress/compose": "^6.11.0",
		"@wordpress/data": "^9.3.0",
		"@wordpress/e2e-test-utils-playwright": "^0.5.0",
		"@wordpress/hooks": "^3.33.0",
		"@wordpress/i18n": "^4.37.0",
		"@wordpress/notices": "^4.1.0",
		"@wordpress/scripts": "^26.4.0",
		"eslint": "8.37.0",
		"husky": "8.0.3",
		"lint-staged": "^13.0.0",
		"lodash": "^4.17.21",
		"phplint": "2.0.5",
		"prettier": "npm:wp-prettier@2.8.5"
	},
	"scripts": {
		"lint:js": "eslint . --ext .js",
		"build": "wp-scripts build ./src/index.js",
		"build:watch": "wp-scripts build --watch ./src/index.js",
		"phplint": "npx phplint '**/*.php' '!vendor/**' '!node_modules/**' '!build' > /dev/null",
		"phpcs": "vendor/bin/phpcs --cache",
		"phpcs:fix": "vendor/bin/phpcbf",
		"lint": "npm run phplint && npm run phpcs && npm run lint:js",
		"start": "wp-scripts start --webpack-devtool=source-map ./src/index.js",
		"prepare": "husky install",
		"test:e2e": "npx playwright test",
		"wp-env": "wp-env"
	},
	"wp-env": {
		"plugin-dir": "vip-governance",
		"plugin-name": "VIP Governance",
		"welcome-logo": [
			",⁻⁻⁻·       .                 |",
			"|  ،⁓’.   . |---  ,---. ,---. |---. ,---. ,---. ,---.",
			"|   | |   | |     |---' |   | |   | |---' |     |   |",
			"`---' `---' `---’ `---’ '   ` `---' `---’ `     `---|",
			"                                                `---'"
		],
		"welcome-build-command": "npm run start"
	}
}
